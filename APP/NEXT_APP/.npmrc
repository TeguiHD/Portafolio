# pnpm Configuration
# See https://pnpm.io/npmrc

# Strict peer dependencies - prevents phantom dependencies
strict-peer-dependencies=true

# Hoist only necessary packages
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=@prisma/client

# Faster installation
prefer-frozen-lockfile=false

# Security
audit-level=high

# ==============================================
# ğŸ›¡ï¸ SECURITY HARDENING (Supply Chain Defense)
# ==============================================
engine-strict=true
ignore-scripts=true
scripts-allow-list=@prisma/client,esbuild,sharp,vercel,next

# Registry
registry=https://registry.npmjs.org/
